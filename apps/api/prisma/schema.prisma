generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int            @id @default(autoincrement())
  name        String
  userId      String         @unique
  email       String         @unique
  imageUrl    String?
  learningLog LearningNote[]
  category    Category[]
  customTest  CustomTest[]
  review      Review[]
  createdDate DateTime       @default(now())
  updatedDate DateTime       @updatedAt
}

model Category {
  id            Int            @id @default(autoincrement()) // Primary key
  user          User           @relation(fields: [userId], references: [userId]) // Relation to User
  userId        String // Foreign key for User
  catergoryName String // Name of the category
  learningLogs  LearningNote[] // Relation to LearningLog
  createdDate   DateTime       @default(now()) // Automatically set creation date
  customTest    CustomTest[]
}

model LearningNote {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [userId])
  userId      String
  topic       String
  //category    Category @relation(fields: [categoryId], references: [id])
  // categoryId  Int
  category    String
  notes       String
  review      Review[]  @relation("LearningNoteReviews")
  updateDate  DateTime  @updatedAt()
  createdDate DateTime  @default(now())
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model CustomTest {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [userId])
  userId      String
  topic       String
  //category    Category @relation(fields: [categoryId], references: [id])
  // categoryId  Int
  category    String
  notes       String
  review      Review[]  @relation("CustomTestReviews")
  updateDate  DateTime  @updatedAt()
  createdDate DateTime  @default(now())
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model Review {
  id        Int      @id @default(autoincrement())
  logId     Int?
  testId    Int?
  userId    String
  updatedAt DateTime @updatedAt()
  createdAt DateTime @default(now())

  user        User          @relation(fields: [userId], references: [userId])
  learningLog LearningNote? @relation("LearningNoteReviews", fields: [logId], references: [id])
  customTest  CustomTest?   @relation("CustomTestReviews", fields: [testId], references: [id])
  testResult  TestResults[]
}

model TestResults {
  id              Int      @id @default(autoincrement())
  review          Review   @relation(fields: [reviewId], references: [id])
  reviewId        Int
  EF              Float    @default(2.5)
  miniTopic       String
  lastScore       Int
  currentInterval Int
  RepetitionCount Int
  nextReviewDate  DateTime
  lastReviewed    DateTime @updatedAt
}
